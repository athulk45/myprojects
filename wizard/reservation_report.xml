<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_view" model="ir.ui.view">
        <field name="name">Reservation</field>
        <field name="model">reservation.report</field>
        <field name="arch" type="xml">
            <form string="Import Record">
                <group>
                    <field name="book_ids" widget="many2many_tags"
                                        domain="[('book_ok','=',True)]"/>
                    <field name="customer_id"
                                domain="[('scholar','=', True)]"/>
                </group>
                <group>
                    <field name="from_date"/>
                    <field name="to_date"/>
                </group>
                <footer>
                    <button name="get_report" string="PDF Report"
                            type="object" class="btn-primary"/>
                    <button name="get_excel_report" string="Excel Report"
                            type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="reservation_report_action" model="ir.actions.act_window">
        <field name="name">Reservation Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">reservation.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="report_view"/>
        <field name="target">new</field>
    </record>

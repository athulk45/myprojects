<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherited" model="ir.ui.view">
        <field name="name">product.template.inherited</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <header>
                <button id="button_import" name="%(material.import_record_action)d"
                            string="Lot-Serial Numbers"
                            type="action"/>
            </header>
        </field>
    </record>
    <record id="product_product_form_view_inherited" model="ir.ui.view">
        <field name="name">product.product.inherited</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <header>
                <button id="button_import" name="%(material.import_record_action)d"
                            string="Lot-Serial Numbers"
                            type="action"/>
            </header>
        </field>
    </record>
</odoo>
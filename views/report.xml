<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_action" model="ir.actions.act_window">
            <field name="name">Scholars</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">research.scholar</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Scholar!
                </p>
            </field>
    </record>
    <menuitem id="report_research_management"
            name="Report"
            parent="menu_research_management_root"
            sequence="2"/>
    <menuitem id="reservation_report"
            name="Reservation"
            parent="report_research_management"
            action="report_action"
            sequence="2"/>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="schloar_tree" model="ir.ui.view">
        <field name="name">research.scholar.tree</field>
        <field name="model">research.scholar</field>
        <field name="arch" type="xml">
            <tree>
                <field name="scholar_id"/>
                <field name="unique_id"/>
                <field name="f_name"/>
                <field name="l_name"/>
                <field name="partner_id"/>
                <field name="age"/>
                <field name="sex"/>
            </tree>
        </field>
    </record>
    <record id="scholar_search" model="ir.ui.view">
        <field name="name">research.scholar.search</field>
        <field name="model">research.scholar</field>
        <field name="arch" type="xml">
            <search string="Related Partner">
                <field name="partner_id" string="Related Partner"/>
                <field name="f_name" string="Name"/>
            </search>
        </field>
    </record>
    <record id="scholar_form" model="ir.ui.view">
        <field name="name">research.scholar.form</field>
        <field name="model">research.scholar</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="scholar_id"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="unique_id"/>
                            <field name="f_name"/>
                            <field name="m_name"/>
                            <field name="l_name"/>
                        </group>
                        <group>
                            <field name="age"/>
                            <field name="sex"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Institute Information">
                            <group>
                                <group>
                                    <field name="institute_id"/>
                                    <field name="i_address" readonly="0"/>
                                </group>
                                <group>
                                    <field name="i_email" readonly="0"/>
                                    <field name="i_phone" readonly="0"/>
                                </group>
                            </group>
                        </page>
                        <page string="Other Information">
                            <group>
                                <group>
                                    <field name="partner_id" domain="
                                [('scholar','=', True)]"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="scholar_partner_form_inherited" model="ir.ui.view">
        <field name="name">scholar.partner.inherited</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="object"
                        name="get_scholar"
                        icon="fa-usd">
                    <field name="count" string="Scholar" widget="statinfo"/>
                </button>
            </div>
            <xpath expr="//field[@name='prime']" position="before">
                <field name="scholar"/>
                <label for="scholar" string="Is Scholar"/><br/>
            </xpath>
        </field>
    </record>
    <record id="scholar_action" model="ir.actions.act_window">
            <field name="name">Scholars</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">research.scholar</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Scholar!
                </p>
            </field>
    </record>

    <menuitem id="menu_research_management_root"
              name="Research Management"
              web_icon="sale_management,static/description/icon.png"
              active="True"
              sequence="7"/>
    <menuitem id="research_management_root"
            name="Research Management"
            parent="menu_research_management_root"
            sequence="2"/>
    <menuitem id="research_scholar"
            name="Research Scholars"
            parent="research_management_root"
            action="scholar_action"
            sequence="2"/>
</odoo>
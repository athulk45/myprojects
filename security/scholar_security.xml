<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_scholar" model="ir.module.category">
        <field name="name">Research Management</field>
        <field name="sequence">12</field>
    </record>
    <record id="group_scholar_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_scholar"/>
    </record>
    <record id="group_scholar_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_scholar"/>
    </record>
    <record id="user_record_rule" model="ir.rule">
        <field name="name">User can only see his own documents</field>
        <field name="model_id" ref="model_book_reservation"/>
        <field name="groups" eval="[(4, ref ('group_scholar_user'))]"/>
        <field name="domain_force">[('responsible_id.id', '=', user.id)]</field>
    </record>
    <record id="user_manager_rule" model="ir.rule">
        <field name="name">managers</field>
        <field name="model_id" ref="model_book_reservation"/>
        <field name="groups" eval="[(4, ref ('group_scholar_manager'))]"/>
        <field name="domain_force">[]</field>
    </record>
</odoo>